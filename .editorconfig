root = true #Indicates that it is the top-level configuration file. When it is set to true, it will stop searching for the .editorconfig file.

# Match all files
[*]
# Indentation style, optional "space", "tab"
indent_style = space
#Number of spaces for indentation
indent_size = 2
# trailing newline character
end_of_line = lf
# Set character set
charset=utf-8
# Remove leading and trailing spaces in a line
trim_trailing_whitespace = true
# Insert new line at end of file
insert_final_newline = true
max_line_length = 150

[*.md]
# Remove leading and trailing spaces in a line
trim_trailing_whitespace = false